{
  "name": "claude-memory-mcp",
  "version": "1.0.0",
  "description": "MCP server for persistent Claude session memory using RAG",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "claude-memory": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "cli": "node dist/cli.js",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "vitest run tests/e2e",
    "test:property": "vitest run tests/property",
    "test:contracts": "vitest run tests/contracts",
    "test:bench": "vitest run tests/benchmarks",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:mutation": "stryker run",
    "test:all": "vitest run && npm run test:mutation"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@xenova/transformers": "^2.17.0",
    "chromadb": "^1.8.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@stryker-mutator/core": "^9.4.0",
    "@stryker-mutator/vitest-runner": "^9.4.0",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^4.0.18",
    "fast-check": "^4.5.3",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18"
  }
}
